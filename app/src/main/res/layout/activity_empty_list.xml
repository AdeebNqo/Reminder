<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="adeebnqo.Independent.switchringer.activity.EmptyList">

    <TextView
        android:text="@string/emptylistnote"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emptylistnote"
        android:gravity="center"
        android:textSize="32sp"
        android:textColor="#808080"
        android:layout_above="@+id/addbuttonempty"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/flat_selector"
        android:text="@string/schedule"
        android:textSize="20sp"
        android:textColor="@drawable/textonbutton_selector"
        android:id="@+id/addbuttonempty"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="125dp" />

</RelativeLayout>
