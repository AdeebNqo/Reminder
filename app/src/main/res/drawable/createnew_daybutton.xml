<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape>
            <gradient
                android:endColor="#ff0099cc"
                android:startColor="#ff0099cc"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#ff0099cc" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

