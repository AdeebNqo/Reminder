<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:id="@+id/event_type_icon"
        android:src="@mipmap/ic_launcher"
        android:scaleType="center"
        android:background="@drawable/material_round_imgview"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/event_name"
            android:maxLines="2"
            android:textSize="28dp"
            android:layout_alignParentTop="true"
            android:includeFontPadding="false"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/event_time"
                android:layout_below="@+id/event_name"
                android:layout_alignLeft="@+id/event_name"
                android:layout_alignStart="@+id/event_name"
                android:layout_marginBottom="10dp"
                android:includeFontPadding="false"
                android:layout_marginLeft="16dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/active_checkBox"
                android:layout_alignBottom="@+id/event_time"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:shadowColor="@color/primary"
                android:layout_marginRight="16dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/divider"
            android:layout_below="@+id/event_time"
            android:background="@android:color/darker_gray"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp" />

    </LinearLayout>

</LinearLayout>